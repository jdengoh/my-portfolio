{
  "tabWidth": 2,
  "printWidth": 160,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "parser": "markdown"
      }
    },
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2,
        "parser": "json"
      }
    }
  ]
}
